.login-page
  = form_for(resource, as: resource_name, :html => {:class => 'login-form'},url: session_path(resource_name)) do |f|
    %h2 Log in
    .txtb
      = f.email_field :email, autofocus: true, autocomplete: "email" , :class=>"input text"
      %span{"data-placeholder" => "Email"}
    .txtb
      = f.password_field :password, autocomplete: "current-password", :class=>"input text"
      %span{"data-placeholder" => "password"}
    - if devise_mapping.rememberable?
      .txtb
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit "Log in"  ,:class=>"logbtn"
