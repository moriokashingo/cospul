= form_for(resource, as: resource_name,:html => {:class => 'login-form'},  url: password_path(resource_name), html: { method: :post }) do |f|
  %h2 Forgot your password?
  = render "devise/shared/error_messages", resource: resource
  .txtb
    = f.email_field :email, autofocus: true, autocomplete: "email" , :class=>"input text"
    %span{"data-placeholder" => "Email"}
  .actions
    = f.submit "Send me reset password instructions" , :class=>"logbtn"
:javascript
  $(".txtb input").on("focus",function(){
    $(this).addClass("focus");
  });

  $(".txtb input").on("blur",function(){
    if($(this).val() == "")
    $(this).removeClass("focus");
  });
= render "devise/shared/links"
